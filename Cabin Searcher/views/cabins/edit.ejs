<% layout('layout/boilerplate')%>

    <% layout('layout/boilerplate')%>
        <div class="row">
            <h1 class="text-center">Edit Campground</h1>
            <div class="col-6 offset-3">
                <form action="/cabins/<%=cabin._id%>?_method=PUT" method="POST">
                    <div class="mb-3">
                        <label class="form-label" for="title">Title</label>
                        <input class="form-control" type="text" id="title" name="cabin[title]" value="<%=cabin.title%>">
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="location">Location</label>
                        <input class="form-control" type="text" id="location" name="cabin[location]"
                            value="<%=cabin.location%>">
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="price">Price</label>
                        <div class="input-group">
                            <span class="input-group-text" id="price-label">$</span>
                            <input class="form-control" placeholder="0.00" type="text" id="price" name="cabin[price]"
                                value="<%=cabin.price%>">
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="image">Image Url</label>
                        <input class="form-control" type="text" id="image" name="cabin[image]" value="<%=cabin.image%>">
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="description">Description</label>
                        <textarea class="form-control" type="text" id="description"
                            name="cabin[description]"><%=cabin.description%></textarea>
                    </div>
                    <div class="mb-3">
                        <button class="btn btn-info">Update Cabin</button>
                    </div>
                </form>
                <a href="/cabins/<%=cabin._id%>">Back to Cabin</a>
            </div>
        </div>