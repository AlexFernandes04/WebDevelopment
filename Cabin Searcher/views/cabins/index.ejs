<% layout('layout/boilerplate')%>
    <h1>cabins</h1>
    <div>
        <a href="/cabins/new">Add Cabin</a>
    </div>
    <% for(let cabin of cabins) { %>
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">
                    <img clas="img-fluid" src="<%=cabin.image %>">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%=cabin.title %>
                        </h5>
                        <p class="card-text">
                            <%=cabin.description %>
                        </p>
                        <p class="card-text">
                            <small class="text-muted">
                                <%=cabin.location %>
                            </small>
                        </p>
                        <a class="btn btn-primary" href="/cabins/<%=cabin._id %>">View <%=cabin.title %></a>
                    </div>
                </div>
            </div>

        </div>

        <% } %>